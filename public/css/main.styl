@import 'nib'

vendor-prefixes = webkit moz o ms official

html
	font-family 'Lato', sans-serif
	font-weight 300
	
body
	margin 0

header
	h1
		background linear-gradient(70deg, rgba(0, 0, 0, 0) 1.15em, rgba(74, 74, 74, 0.901961) 1.15em)
		color #fff
		float right
		font-family 'Lato', sans-serif
		font-size 24px
		margin 0 10px
		padding 5px 10px 5px 40px
		position relative
		text-transform uppercase
		top 40%
	h2
		background linear-gradient(70deg, rgba(0, 0, 0, 0) 1.15em, rgba(74, 74, 74, 0.901961) 1.15em)
		color #fff
		float right
		font-family 'Lato', Helvetica, Arial, sans-serif
		font-size 16px
		margin 0 10px
		padding 5px 10px 5px 40px
		position relative
		text-align right
		top 43%
	span
		-webkit-transition background-color 0.3s
		background-color rgba(255, 255, 255, 0.7)
		border-radius 6px
		display block
		font-size 0px
		height 4px
		margin-left 10px
		margin-top 20px
		position fixed
		transition background-color 0.3s
		width 30px
		z-index: 2000;
		&:after
		&:before
			-webkit-transition -webkit-transform 0.3s, background-color 0.3s
			background-color rgba(255, 255, 255, 0.7)
			border-radius 6px
			content ''
			height 100%
			left 0
			position absolute
			transition transform 0.3s, background-color 0.3s
			width 100%
		&:after
			transform translateY(200%)
		&:before
			transform translateY(-200%)
		&:hover
			cursor pointer
	&#principal
		background-color #d8a772
		height 240px
		margin 0
		text-align right
	&.color2
		span
			background-color rgba(0, 0, 0, 0.7)
			&:after
			&:before
				background-color rgba(0, 0, 0, 0.7)
	&.open
		span
			background transparent !important
			z-index 2000
			&:after
			&:before
				background-color #fff
			&:after
				-webkit-transform translateY(0) rotate(-45deg)
				transform translateY(0) rotate(-45deg)
			&:before
				-webkit-transform translateY(0) rotate(45deg)
				transform translateY(0) rotate(45deg)

main
	margin 10px
	position relative
	section
		article
			aside
			p
				display inline-block
				margin 0
			aside
				margin 10px 0 5px
				vertical-align top
				width 100%
				span
					&.tag
						background-color #f5f5f5
						border 1px solid #eee
						border-radius 2px
						color #787878
						display inline-block
						font-size 10px
						margin 3px
						padding 2px 13px
			header
				margin 10px 0 0
				h4
					font-size 14px
					margin 0
					padding 5px 10px
			p
				font-size 12px
				width 100%
				img
					border 1px solid #eee
					float left
					margin 3px 5px 2px 0
			&:last-child
				border-bottom none
		div
			&#background
				position absolute
				top 0
				right 0
				z-index -1
				&:before
					content "< / >"
					color #E0E0E0
					font-size 40px
					font-family 'Arial'
					font-weight bold
		h3
			clear both
			float none
			font-size 18px
			margin 10px 20px
			text-transform uppercase
		hr
			background linear-gradient(to right, #fff, #bebebe, #fff)
			border none
			height 1px
			width 90%
#cite
	blockquote
		border none
		margin 0
		background #2F2F2F
		cite
			color #eee
			display none
			font-size 12px
			margin 0 25px
			padding-bottom 10px
			text-align right
			transition display 1s
			&:before
				content "\2014 \2009"
		p
			color #eee
			font-size 14px
			margin 0
			min-height 50px
			padding 10px 5px
			&:before
				color #eee
				content "\201C"
				display inline-block
				float left
				font-family sans-serif
				font-size 80px
				margin -10px 0 0				

#oculta 
	display none
	position fixed
	width 100%
	height 100%
	background rgba(0, 1, 7, 0.9)
	overflow-y scroll
	-webkit-overflow-scrolling touch
	z-index 1
	h2
		color #fff
		margin 6px 0 6px 50px
		text-transform uppercase
	nav
	section#social-networks
		margin 0 auto 35px
		width 80%
		h3
			border-bottom 2px solid #fff
			color #fff
			font-size 18px
			margin 0 auto
			padding-bottom 10px
			text-align center
			text-transform uppercase
		ul
			list-style none
			padding 0
			li
				margin 0 0 5px
				text-align center
				a
					color #fff
					display block
					font-size 16px
					font-weight bold
					padding 12px
					text-decoration none
					text-transform uppercase
					&:hover
						background #000
	section
		&#languages
			margin 20px 10px
			div
				display inline-block
				margin 0 4%
				text-align center
				width 40%
				div
					display block
					margin 0 auto
					&.arrow
						border none
						font-size 0
						height 0
						line-height 0
						width 0
					&.line
						height 3px
						width 80%
				p
					color #ccc
					font-size 12px
					font-weight bold
					margin 4px 0
				span
					background-repeat no-repeat
					display block
					height 29px
					margin 0 auto
					width 45px
				&#es
					span
						background-image url(../img/languages/es.png)
				&#en
					span
						background-image url(../img/languages/en.png)
								
				&.selected
					div
						&.arrow
							border-bottom 4px solid #696969
							border-left 4px solid transparent
							border-right 4px solid transparent
						&.line
							background linear-gradient(to right, transparent, #696969, transparent)
.overflow-hidden
	overflow hidden
	


/* Retina displays */
@media only screen and (-Webkit-min-device-pixel-ratio: 1.5),
only screen and (-moz-min-device-pixel-ratio: 1.5),
only screen and (-o-min-device-pixel-ratio: 3/2),
only screen and (min-device-pixel-ratio: 1.5)
	#oculta
		section
			div
				&#es
					span
						background-image url(../img/languages/es@2x.png)
						background-size contain
				&#en
					span
						background-image url(../img/languages/en@2x.png)
						background-size contain
		
	
