#contenedor 
	border-left 1px solid black
	height 960px
	position absolute
	right 0
	top 0
	width 320px
	
#cite
	blockquote
		border none
		margin 0
		background #000
		cite
			color #fff
			display none
			font-size 12px
			margin 0 25px
			padding-bottom 10px
			text-align right
			transition display 1s
			&:before
				content "\2014 \2009"
		p
			color #fff
			font-size 14px
			margin 0
			min-height 50px
			padding 10px 5px
			&:before
				color #fff
				content "\201C"
				display inline-block
				float left
				font-family sans-serif
				font-size 80px
				margin -10px 0 0				

#oculta 
	display none
	position fixed
	width 100%
	height 100%
	background rgba(0, 1, 7, 0.9)
	overflow-y scroll
	-webkit-overflow-scrolling touch
	z-index 1


