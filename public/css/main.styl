@import 'nib'

vendor-prefixes = webkit moz o ms official

html
	font-family 'Lato', sans-serif
	font-weight 300
	
body
	margin 0

header
	h1
		background linear-gradient(70deg, rgba(0, 0, 0, 0) 1.15em, rgba(74, 74, 74, 0.901961) 1.15em)
		color white
		float right
		font-family 'Lato', sans-serif
		font-size 24px
		margin 0 10px
		padding 5px 10px 5px 40px
		position relative
		text-transform uppercase
		top 40%
	h2
		background linear-gradient(70deg, rgba(0, 0, 0, 0) 1.15em, rgba(74, 74, 74, 0.901961) 1.15em)
		color white
		float right
		font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
		font-size 16px
		margin 0 10px
		padding 5px 10px 5px 40px
		position relative
		text-align right
		top 43%
	span
		-webkit-transition background-color 0.3s
		background-color #000
		border-radius 6px
		display block
		font-size 0px
		height 4px
		margin-left 10px
		margin-top 20px
		position fixed
		transition background-color 0.3s
		width 30px
		&:after
		&:before
			-webkit-transition -webkit-transform 0.3s, background-color 0.3s
			background #000
			border-radius 6px
			content ''
			height 100%
			left 0
			position absolute
			transition transform 0.3s, background-color 0.3s
			width 100%
		&:after
			transform translateY(200%)
		&:before
			transform translateY(-200%)
		&:hover
			cursor pointer
	&#principal
		background-color #d8a772
		height 240px
		margin 0
		text-align right
	&.open
		span
			background transparent !important
			z-index 2000
			&:after
			&:before
				background-color white
			&:after
				-webkit-transform translateY(0) rotate(-45deg)
				transform translateY(0) rotate(-45deg)
			&:before
				-webkit-transform translateY(0) rotate(45deg)
				transform translateY(0) rotate(45deg)

main
	section
		article
			aside
				float left
			header
				h4
					font-size 12px
		h3
			clear both
			font-size 14px
			margin 10px 5px
			text-transform uppercase
			float none
			

