@import 'nib'

vendor-prefixes = webkit moz o ms official

html
	font-family 'Lato', sans-serif
	font-weight 300
	
body
	margin 0

header
	h1
		background linear-gradient(70deg, rgba(0, 0, 0, 0) 1.15em, rgba(74, 74, 74, 0.901961) 1.15em)
		color white
		float right
		font-family 'Lato', sans-serif
		font-size 24px
		margin 0 10px
		padding 5px 10px 5px 40px
		position relative
		text-transform uppercase
		top 40%
	h2
		background linear-gradient(70deg, rgba(0, 0, 0, 0) 1.15em, rgba(74, 74, 74, 0.901961) 1.15em)
		color white
		float right
		font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
		font-size 16px
		margin 0 10px
		padding 5px 10px 5px 40px
		position relative
		text-align right
		top 43%
	span
		-webkit-transition background-color 0.3s
		background-color rgba(0, 0, 0, 0.7)
		border-radius 6px
		display block
		font-size 0px
		height 4px
		margin-left 10px
		margin-top 20px
		position fixed
		transition background-color 0.3s
		width 30px
		&:after
		&:before
			-webkit-transition -webkit-transform 0.3s, background-color 0.3s
			background rgba(0, 0, 0, 0.7)
			border-radius 6px
			content ''
			height 100%
			left 0
			position absolute
			transition transform 0.3s, background-color 0.3s
			width 100%
		&:after
			transform translateY(200%)
		&:before
			transform translateY(-200%)
		&:hover
			cursor pointer
	&#principal
		background-color #d8a772
		height 240px
		margin 0
		text-align right
	&.open
		span
			background transparent !important
			z-index 2000
			&:after
			&:before
				background-color white
			&:after
				-webkit-transform translateY(0) rotate(-45deg)
				transform translateY(0) rotate(-45deg)
			&:before
				-webkit-transform translateY(0) rotate(45deg)
				transform translateY(0) rotate(45deg)

main
	margin 10px
	position relative
	section
		article
			aside
			p
				display inline-block
				margin 0
			aside
				margin 10px 0 5px
				vertical-align top
				width 100%
				span
					&.tag
						background-color #f5f5f5
						border 1px solid #eee
						border-radius 2px
						color #787878
						display inline-block
						font-size 10px
						margin 3px
						padding 2px 13px
			header
				margin 10px 0 0
				h4
					font-size 14px
					margin 0
					padding 5px 10px
			p
				font-size 12px
				width 100%
				img
					border 1px solid #eee
					float left
					margin 3px 5px 2px 0
			&:last-child
				border-bottom none
		div
			&#background
				position absolute
				top 0
				right 0
				z-index -1
				&:before
					content "< / >"
					color #E0E0E0
					font-size 40px
					font-family 'Arial'
					font-weight bold
		h3
			clear both
			float none
			font-size 18px
			margin 10px 20px
			text-transform uppercase
		hr
			background linear-gradient(to right, #fff, #bebebe, #fff)
			border none
			height 1px
			width 90%	

#contenedor 
	border-left 1px solid black
	height 960px
	position absolute
	right 0
	top 0
	width 320px
	
#cite
	blockquote
		border none
		margin 0
		background #000
		cite
			color #fff
			display none
			font-size 12px
			margin 0 25px
			padding-bottom 10px
			text-align right
			transition display 1s
			&:before
				content "\2014 \2009"
		p
			color #fff
			font-size 14px
			margin 0
			min-height 50px
			padding 10px 5px
			&:before
				color #fff
				content "\201C"
				display inline-block
				float left
				font-family sans-serif
				font-size 80px
				margin -10px 0 0				

#oculta 
	display none
	position fixed
	width 100%
	height 100%
	background rgba(0, 1, 7, 0.9)
	overflow-y scroll
	-webkit-overflow-scrolling touch
	z-index 1
	h2
		color #fff
		margin 6px 0 6px 50px
		text-transform uppercase
	section
		div
			&.es
			&.en
				background-color red
	
.overflow-hidden
	overflow hidden